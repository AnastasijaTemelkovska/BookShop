@model List<BookShop.Domain.DomainModels.Book >

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Books" asp-action="Create">Add new Book</a>
    </div>
    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        if (i % 3 == 0)
        {
            @:<div class="row">
            }
            <div class="col-md-4 m-3">
                <div class="card" style="width: 20rem; height: 55rem;">
                    <img class="card-img-top" src="@item.BookImage" alt="Image for book" style="height=50%" />

                    <div class="card-body">
                        <h3 class="card-title">@item.BookName</h3>
                        <p class="card-text">@item.Author</p>
                        <p class="card-text">@item.BookDescription</p>
                        <h6>Price: @item.BookPrice</h6>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Books" asp-action="AddBookToCard" asp-route-id="@item.Id" class="btn btn-info">Add to Card</a>
                        <a asp-controller="Books" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    </div>

                </div>
            </div>
            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>
