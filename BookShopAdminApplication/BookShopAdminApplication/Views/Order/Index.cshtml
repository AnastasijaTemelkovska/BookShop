@{
}
@model List<BookShopAdminApplication.Models.Order>




<div class="container">

    <div class="row">
        <a class="btn btn-outline-success" asp-controller="Order" asp-action="ExportAllOrders">Export Orders</a>
    </div>

    <div class="row m-4">

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Costumer Details</th>
                    <th scope="col">Number of books</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No active Products</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.User.UserName</td>
                            <td>@item.Books.Count</td>
                            <td><a class="btn btn-outline-secondary" asp-action="Details" asp-route-orderid="@item.Id">Details</a></td>
                            <td><a class="btn btn-outline-secondary" asp-action="CreateInvoice" asp-route-orderid="@item.Id">Create Invoice</a></td>
                        </tr>
                    }
                }
            </tbody>
         
        </table>
    </div>

</div>
